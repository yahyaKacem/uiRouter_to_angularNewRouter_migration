root = true
[*]
  indent_size              = 2
  end_of_line              = lf
  max_line_length          = 75
  insert_final_newline     = true
  spaces_around_operators  = true
  trim_trailing_whitespace = true
  charset                  = utf-8
  indent_style             = space
  curly_bracket_next_line  = false
[*.md]
  trim_trailing_whitespace = false
